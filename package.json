{
  "private": true,
  "name": "polychroma",
  "description": "Generate better CSS gradients using alternative colour spaces & Bezier interpolation.",
  "author": "Jeff <rustyangel@gmail.com>",
  "version": "2.1.1",
  "scripts": {
    "build": "nuxt build",
    "deploy": "np && release && npm run generate && now dist/ -p --name polychroma && now alias",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "lint:scripts": "eslint '**/*.{js,vue}' --fix --ignore-pattern '.nuxt/**' --ignore-pattern 'dist/**' --ignore-pattern 'static/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.nuxt,dist}/**'",
    "start": "nuxt start",
    "test": "yarn lint"
  },
  "dependencies": {
    "@nuxtjs/google-analytics": "2.4.x",
    "@nuxtjs/markdownit": "1.2.x",
    "@nuxtjs/pwa": "2.6.x",
    "chroma-js": "2.1.x",
    "nuxt": "2.11.x"
  },
  "devDependencies": {
    "@zazen/eslint-config": "2.1.x",
    "@zazen/stylelint-config": "1.0.x",
    "eslint": "7.14.x",
    "eslint-plugin-vue": "7.1.x",
    "husky": "4.3.x",
    "import-sort-style-python": "1.0.x",
    "lint-staged": "10.5.x",
    "postcss-advanced-variables": "3.0.x",
    "prettier": "2.1.x",
    "prettier-plugin-import-sort": "0.0.6",
    "prettier-plugin-packagejson": "2.2.x",
    "stylelint": "13.8.x"
  },
  "engines": {
    "node": ">8.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,vue}": [
      "stylelint --fix",
      "git add"
    ],
    "package.json": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "htmlWhitespaceSensitivity": "strict",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all"
  },
  "importSort": {
    ".js,.ts,.vue": {
      "parser": "babylon",
      "style": "python",
      "options": {
        "knownFramework": [
          "@nuxt",
          "nuxt",
          "@vue",
          "vue"
        ],
        "knownFirstparty": [
          "~"
        ]
      }
    }
  }
}
