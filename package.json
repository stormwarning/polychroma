{
  "private": true,
  "name": "polychroma",
  "description": "Generate better CSS gradients using alternative colour spaces & Bezier interpolation.",
  "author": "Jeff <rustyangel@gmail.com>",
  "version": "1.2.1",
  "scripts": {
    "build": "nuxt build",
    "precommit": "npm run lint",
    "deploy": "np && release && npm run generate && now dist/ -p --name polychroma && now alias",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "lint": "prettier-eslint '**/*.{js,vue}' --write --list-different --ignore '{dist,.nuxt}/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --fix -ip '{.nuxt,dist}/**'",
    "start": "nuxt start"
  },
  "dependencies": {
    "@nuxtjs/google-analytics": "^2.0.0",
    "chroma-js": "^1.3.7",
    "nuxt": "^1.4.2",
    "vue-color": "^2.3.1",
    "vue-slider-component": "^2.3.9",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@zazen/eslint-config": "1.0.x",
    "@zazen/stylelint-config": "1.0.x",
    "eslint": "5.12.x",
    "eslint-loader": "2.1.x",
    "eslint-plugin-vue": "5.1.x",
    "stylelint": "9.10.x"
  },
  "engines": {
    "node": ">8.x"
  },
  "now": {
    "alias": "polychroma"
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all"
  }
}
