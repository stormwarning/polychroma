{
  "private": true,
  "name": "polychroma",
  "description": "Generate better CSS gradients using alternative colour spaces & Bezier interpolation.",
  "author": "Jeff <rustyangel@gmail.com>",
  "version": "1.2.0",
  "scripts": {
    "build": "nuxt build",
    "precommit": "npm run lint",
    "deploy": "np && release && npm run generate && now dist/ -p --name polychroma && now alias",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "lint": "prettier-eslint '**/*.{js,vue}' --write --ignore dist/** .nuxt/**",
    "lint:styles": "stylelint --fix",
    "start": "nuxt start"
  },
  "dependencies": {
    "@nuxtjs/google-analytics": "^2.0.0",
    "chroma-js": "^1.3.7",
    "nuxt": "^1.0.0-rc3",
    "vue-color": "^2.3.1",
    "vue-slider-component": "^2.3.9"
  },
  "devDependencies": {
    "@zazen/eslint-config": "^0.2.0",
    "@zazen/stylelint-config": "^0.1.1",
    "eslint": "^5.5.0",
    "eslint-loader": "^2.1.0",
    "stylelint": "^9.5.0"
  },
  "engines": {
    "node": ">8.1.x"
  },
  "now": {
    "alias": "polychroma"
  },
  "prettier": {
    "tabWidth": 4
  }
}
