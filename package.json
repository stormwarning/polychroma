    "@remix-run/react": "1.16.0",
    "@remix-run/vercel": "1.16.0",
    "@vanilla-extract/css": "1.11.0",
    "@vanilla-extract/dynamic": "2.0.3",
    "@vanilla-extract/sprinkles": "1.6.0",
    "@vercel/node": "2.14.2",
    "clsx": "1.2.1",
    "colorjs.io": "0.4.3",
    "isbot": "3.6.7",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.1",
    "@remix-run/dev": "1.16.0",
    "@remix-run/eslint-config": "1.16.0",
    "@remix-run/serve": "1.16.0",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@vanilla-extract/css-utils": "0.1.3",
    "@zazen/eslint-config": "6.3.0",
    "@zazen/stylelint-config": "3.0.0",
    "autoprefixer": "10.4.14",
    "eslint": "8.40.0",
    "husky": "4.3.x",
    "import-sort-style-python": "1.0.2",
    "lint-staged": "13.2.2",
    "polished": "4.2.2",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "prettier-plugin-packagejson": "2.4.3",
    "stylelint": "15.6.1",
    "typescript": "4.8.4"
