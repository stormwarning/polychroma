{
  "name": "polychroma",
  "version": "2.1.2",
  "private": true,
  "description": "Generate better CSS gradients using alternative colour spaces & Bezier interpolation.",
  "author": "Jeff Nelson (https://tidaltheory.io)",
  "scripts": {
    "build": "nuxt build",
    "changeset": "changeset add",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint '**/*.{js,vue}' --fix --ignore-pattern '.nuxt/**' --ignore-pattern 'dist/**' --ignore-pattern 'static/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.nuxt,dist}/**'",
    "prepare": "npx simple-git-hooks",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  },
  "type": "module",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix",
    "*.{css,vue}": "stylelint --fix",
    "package.json": "prettier --write"
  },
  "prettier": {
    "htmlWhitespaceSensitivity": "strict",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "chroma-js": "^2.6.0",
    "pinia": "^2.3.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.3.0",
    "@changesets/cli": "2.14.1",
    "@nuxt/eslint": "^0.7.0",
    "@nuxtjs/tailwindcss": "^6.12.0",
    "@pinia/nuxt": "^0.9.0",
    "@tailwindcss/typography": "^0.5.15",
    "@vite-pwa/nuxt": "^0.10.6",
    "@zazen/eslint-config": "2.1.x",
    "@zazen/stylelint-config": "1.0.x",
    "autoprefixer": "^10.4.20",
    "eslint": "7.14.x",
    "eslint-plugin-vue": "7.1.x",
    "lint-staged": "10.5.x",
    "nuxt": "^3.15.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "simple-git-hooks": "2.13.1",
    "stylelint": "13.8.x",
    "tailwindcss": "^3.4.17",
    "tailwindcss-capsize": "4.0.1",
    "typescript": "^5.7.2",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
